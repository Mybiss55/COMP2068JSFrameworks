{{!-- This page will contain a form --}}
<h1>{{ title }}</h1>
<form method="post">
    {{!-- Input field that match data model --}}
    <fieldset>
        <label for="">Name:</label>
        <input type="text" name="name" placeholder="Name" id="name" required>
    </fieldset>
    <fieldset>
        <label for="">Created:</label>
        <input type="date" name="Created" id="created">
    </fieldset>
    <fieldset>
        <label for="">Total Price:</label>
        <input type="number" name="totalPrice" id="totalPrice">
    </fieldset>
    <fieldset>
        <label for="">Items: </label>
        {{!-- <input type="text" name="course" placeholder="Title" id="course" required> --}}
        {{!-- ToDo Make this a checkbox system so you can select however many you want --}}
        <select name="course" id="course">
            {{#each items}}
                <option>{{this.name}}</option>
            {{/each}}
        </select>
    </fieldset>
    {{! Add a button}}
    <button class="btn btn-primary">Save</button>
</form>