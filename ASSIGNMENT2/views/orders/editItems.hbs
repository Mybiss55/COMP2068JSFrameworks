<h1>{{ title }}</h1>
<form method="post">
    <fieldset>
        <label for="">Name:</label>
        <input type="text" name="name" placeholder="Name" id="name" required value="{{item.name}}">
    </fieldset>
    <fieldset>
        <label for="">Ingredients: </label>
        <input type="text" name="ingredients" id="itingredientsems" placeholder="Ingredients" value="{{item.ingredients}}">
    </fieldset>
    <fieldset>
        <label for="">Price:</label>
        <input type="number" name="price" id="price" placeholder="Price" value="{{item.price}}">
    </fieldset>
    <button class="btn btn-primary">Save</button>
</form>